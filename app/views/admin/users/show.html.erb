<p id="notice" style="margin-top: 30px;"><%= notice %></p>
<div class="col-sm-4">

  <h2> Profile </h2>
  <p style="margin-left: 20px;">
    <%= image_tag 'http://placehold.it/100x100' %>
  </p>

  <p style="margin-left: 10px;">
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p style="margin-left: 10px;">
    <strong>Username:</strong>
    <%= user.username %>
  </p>

  <p style="margin-left: 10px;">
    <strong>Email:</strong>
    <%= user.email %>
  </p>
</div>

<div class="col-sm-8">
  <h2> Subscription Plans </h2>
     <%= link_to 'Select a Plan', subscriptions_path %>

  <p style="margin-left: 10px;">
    <%= link_to 'Edit', edit_admin_user_path([:admin, user]) %> |
    <%= link_to 'Back', admin_users_path %>
  </p>
</div>
